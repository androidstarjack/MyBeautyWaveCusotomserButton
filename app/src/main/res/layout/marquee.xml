<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingTop="50dp">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="start"
        android:text="开始"
        android:textSize="15dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stop"
        android:text="结束"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/reStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startFor0"
            android:text="从头开始"
            android:textSize="15dp" />

        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="left"
            android:text="向左滚"
            android:textSize="15dp" />

        <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="right"
            android:text="向右滚"
            android:textSize="15dp" />
        <Button
            android:id="@+id/addSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addSpeed"
            android:text="加速"
            android:textSize="15dp" />
        <Button
            android:id="@+id/reduceSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="reduceSpeed"
            android:text="减速"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <mg.yyh.com.mybeautywavecusotomserbutton.widget.MarqueeText
            android:id="@+id/marqueeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E5E5AF"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="双河土匪"
            android:textColor="#000000"
            android:textSize="60dp" />
    </LinearLayout>

</LinearLayout>